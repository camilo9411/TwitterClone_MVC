@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor httpContextaccessor


<nav class="navbar navbar-expand-lg shadow twitterColor">
    <div class="container-fluid">
        @Html.ActionLink("Twitter Clone", "Index", "Tweets", null, new { @class = "navbar-brand text-light" })
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    @Html.ActionLink("My Feed", "Index", "Tweets", null, new { @class = "nav-link active text-light custom_weight" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Post", "Create", "Tweets", null, new { @class = "nav-link active text-light custom_weight" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Users", "Index", "Users", null, new { @class = "nav-link active text-light custom_weight" })
                </li>
            </ul>
        </div>
        @{
            string name = httpContextaccessor.HttpContext.Request.Cookies["Auth"];
            string UserId = httpContextaccessor.HttpContext.Request.Cookies["ID"];
        
        }
        @Html.ActionLink("Logout", "Logout", "Home", null, new { @class = "nav-link active text-light custom_weight" })
 
        <a style="text-decoration:none;" class="nav-text text-light" asp-action="Edit" asp-controller="Users" asp-route-id="@UserId">
            Hello <span class="custom_weight">@name</span></a>
    </div>
</nav>