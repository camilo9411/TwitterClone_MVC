@model TwitterClone_MVC.Models.Tweet

@{
    ViewData["Title"] = "Create";
}

<h2>What's on yout mind?</h2>
<hr />
<div class="mx-auto w-75 text-center my-5">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <textarea asp-for="Message" class="form-control w-50 mx-auto" style="resize: none;" placeholder="tweet something fun..."></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Tweet" class="btn btn-primary w-50 mx-auto my-3" />
            </div>
        </form>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
